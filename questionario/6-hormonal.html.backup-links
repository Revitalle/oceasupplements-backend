            color: white;
            font-weight: bold;
            font-size: 0.7rem;
            box-shadow: 0 2px 6px rgba(0,0,0,0.2);
        }

        /* Question√°rio */
        .questionnaire-section {
            max-width: 900px;
            margin: 3rem auto;
            padding: 0 1rem;
        }

        .section-title {
            color: #007c8c;
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .section-description {
            color: #666;
            margin-bottom: 3rem;
