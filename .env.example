# =============================================
# CONFIGURAÇÕES DO BACKEND - MVP
# =============================================

# Ambiente
NODE_ENV=development

# Servidor
PORT=3000

# Banco de Dados PostgreSQL
# Local: postgresql://usuario:senha@localhost:5432/nome_do_banco
# Railway: Será fornecido automaticamente pela plataforma
DATABASE_URL=postgresql://postgres:senha123@localhost:5432/health_diagnostic_mvp

# JWT Secret (MUDE PARA UMA CHAVE ALEATÓRIA EM PRODUÇÃO!)
JWT_SECRET=sua_chave_secreta_super_segura_aqui_12345
JWT_EXPIRE=7d

# CORS (domínios permitidos - separados por vírgula)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://seu-site.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# URLs Externas
CHECKOUT_BASE_URL=https://checkout.exemplo.com
FRONTEND_URL=http://localhost:3000

# Logs
LOG_LEVEL=info

# =============================================
